<view class="reg">
        <view class="username userpwd">
                <image src="../../images/login/f.png"></image>
                <input placeholder="账户/手机号" bindblur="bindinputname"  placeholder-style="font-size:28rpx;padding-left:10rpx;" value="{{userName}}" />
         </view>
         <view class="username userpwd verification_code">
                <image src="../../images/login/fg.png"></image>
                <input placeholder="验证码" type="text" bindtap="bindincode" placeholder-style="font-size:28rpx;padding-left:10rpx;"  />
                <view class="yanzhengm">
                      <button disabled='{{disabled}}' data-id="2" bindtap="getVerificationCode" value="{{userName}}" >{{time}}</button>
                </view>
                
         </view>

         <view class=" username userpwd">
                <image src="../../images/login/fg.png"></image>
                <input placeholder="登录密码(6~16位数字字母组合密码)" type="password" placeholder-style="font-size:28rpx;padding-left:10rpx;" bindblur="bindinputpass" value="{{userPassword}}" auto-focus/>
         </view>
         <view class="userpwd userpass">
                <image src="../../images/login/fg.png"></image>
                <input placeholder="确认密码" type="password" bindblur="bindinputpwd" placeholder-style="font-size:28rpx;padding-left:10rpx;" value="{{userPwd}}"  />
         </view>
         <view class="regbut">
                        <button type="button" bindtap="handleClickReg">立即注册</button>

         </view>

         <text>*注册代表你同意（xxx用户协议）</text>

</view>
