/* pages/cash/cash.wxss */
.header{
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 750rpx;
    height:153rpx;
    background: #00a2e9; 
}
.heade{
    display: flex;
    flex-direction: row;
    align-items: center;
    flex-grow: 1;
   
}
.header_pic{
    display: flex;
    flex-direction: column;
    padding-left: 50rpx;
    
}
.header_pic image{
    width:70rpx;
    height: 70rpx;
}
.header_pic text{
    font-size:28rpx;
    color:white;
    padding-top:10rpx;
    padding-left:10rpx
}
.header_pic_l{
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding-right: 30rpx;
    
}
.header_out{
    width: 750rpx;
    height: 200rpx;
    background: #f2f2f2;
    display: flex;
    justify-content: center;
    align-items: center;
    
}




.header_top_last>li{
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
} 
.header_top>li:not(:last-child){
    border-right: 1px solid #f2f2f2;
    padding-right: 20rpx;
}
.types{
    width: 750rpx;
    height: 80rpx;
    display: flex;
    justify-content:space-around;
    align-items: center;
    background: #00a2e9;
    
}
.types>li{
    width: 33%;
    text-align: center;
    line-height: 50rpx;
    font-size: 30rpx;
    color: white;
}
.types>li:not(:last-child){
    
    border-right: 1px solid #f2f2f2;
}


/* 切换 */
.swiper-tab{
    width:750rpx;
    height:167rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
    background:white;
}
.style_clomn{
    display: flex;
    flex-direction: column
}
.style_clomn text{
    display: inline-block;
    padding-top: 10rpx;
}

.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 16.3%;  
    text-align: center;
    color: #777777;  
} 
swiper{
  overflow: auto;
} 
.on{ color: #badffc;  
    border-bottom: 5rpx solid #00a2e9;

}  
swiper-item{
    overflow: auto;
}  
.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden; }  

.spacing{
    height: 20rpx;
    background: #f2f2f2;
}
